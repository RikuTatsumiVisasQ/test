{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "packageRules": [
        {
            "enabled": false,
            "matchPackagePatterns": [
                "*"
            ]
        }
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "addLabels": [
            "security"
        ]
    },
    "prConcurrentLimit": 5,
    "branchConcurrentLimit": 5,
    "timezone": "Asia/Tokyo"
}